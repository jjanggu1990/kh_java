<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/sitemesh/decorator">
	<decorator name="main" page="/sitemesh/decorator/hello_decorator.jsp">
		<pattern>/sitemesh/hello.jsp</pattern>
		<pattern>/sitemesh/hello/*</pattern>
	</decorator>

	<decorator name="news" page="/sitemesh/decorator2/news_decorator.jsp">
		<pattern>/news/*</pattern>
	</decorator>

	<excludes>
		<pattern>/hello/exclude.jsp</pattern>
		<pattern>/news/exclude.jsp</pattern>
	</excludes>

</decorators>