SELECT WORK.ENAME, MANAGER.ENAME
FROM EMP WORK, EMP MANAGER
WHERE WORK.MGR = MANAGER.EMPNO;

SELECT WORK.ENAME || '의 매니저는 '|| MANAGER.ENAME ||'이다.'
AS "그 사원의 매니저"
FROM EMP WORK, EMP MANAGER
WHERE WORK.MGR = MANAGER.EMPNO;

SELECT * FROM EMP;


SELECT * FROM EMP CROSS JOIN DEPT;


SELECT ENAME, DNAME
FROM EMP INNER JOIN DEPT
ON EMP.DEPTNO = DEPT.DEPTNO
WHERE ENAME = 'SCOTT';

SELECT EMP.ENAME, DEPT.DNAME
FROM EMP INNER JOIN DEPT
USING(DEPTNO)
WHERE ENAME = 'SCOTT';


SELECT ENAME, DNAME
FROM EMP NATURAL JOIN DEPT
WHERE ENAME = 'SCOTT';


SELECT * FROM DEPT D FULL OUTER JOIN EMP E ON E.DEPTNO = D.DEPTNO;


SELECT DNAME
FROM DEPT
WHERE DEPTNO = (SELECT DEPTNO FROM EMP WHERE ENAME = 'SCOTT');


SELECT * FROM EMP WHERE DEPTNO = (SELECT DEPTNO FROM EMP WHERE ENAME = 'SMITH');


SELECT ENAME, SAL FROM EMP WHERE SAL > (SELECT AVG(SAL) FROM EMP);

SELECT ENAME , SAL,  DEPTNO FROM EMP WHERE DEPTNO IN
(SELECT DISTINCT DEPTNO FROM EMP WHERE SAL >= 3000);

SELECT ENAME , SAL FROM EMP WHERE SAL> ALL(SELECT SAL FROM EMP WHERE DEPTNO = 30);
SELECT ENAME , SAL FROM EMP WHERE SAL> (SELECT MAX(SAL) FROM EMP WHERE DEPTNO = 30);

SELECT ENAME, SAL FROM EMP WHERE SAL> ANY(SELECT SAL FROM EMP WHERE DEPTNO = 30) ORDER BY SAL DESC;
SELECT ENAME, SAL FROM EMP WHERE SAL> (SELECT MIN(SAL) FROM EMP WHERE DEPTNO = 30);


UPDATE DEPT01 SET LOC = (SELECT LOC FROM DEPT01 WHERE DEPTNO=40) WHERE DEPTNO = 10;

SELECT * FROM DEPT01;

UPDATE DEPT01 SET (DNAME, LOC)= (SELECT DNAME, LOC FROM DEPT WHERE DEPTNO = 30) WHERE DEPTNO =20;

SELECT ENAME, SAL FROM EMP WHERE SAL> ANY(SELECT SAL FROM EMP WHERE JOB = 'SALESMAN') AND DEPTNO !=20;