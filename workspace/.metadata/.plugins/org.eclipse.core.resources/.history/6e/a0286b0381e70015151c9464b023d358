<script>
	function signal_input(a){
		document.calculator.signal.value = a;
	}
	function result(a){
		x = document.calculator.num1.value;
		y = document.calculator.num2.value;
		document.calculator.signal.value = a;
		s =a
		
		if(s == '+'){
			document.calculator.num3.value = x+y;
		}else if(s == '-'){
			document.calculator.num3.value = x-y;
		}else if(s == '*'){
			document.calculator.num3.value = x*y;
		}else if(s == '/'){
			document.calculator.num3.value = x/y;
		}
	}
</script>
