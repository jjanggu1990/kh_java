<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="logon">

	<insert id="insertMember" parameterType="board.logonDataBean">
		insert into members
		values(#{id},#{pwd},#{email},#{phone},sysdate)
	</insert>
	
	
	<select id="userCheck" parameterType="String" resultType="test.vo.MembersVo">
		select *
		from members where id=#{id}
	</select>
	<select id="confirmId" parameterType="String" resultType="test.vo.MembersVo">
		select *
		from members where id=#{id}
	</select>
	<select id="getMember" parameterType="String" resultType="test.vo.MembersVo">
		select *
		from members where id=#{id}
	</select>
	<update id="updateMember" parameterType="test.vo.MembersVo">
		update members set
		pwd=#{pwd},email=#{email},phone=#{phone} where id=#{id}
	</update>
	<delete id="deleteMember" parameterType="java.lang.String">
		delete from members where
		id=#{id}
	</delete>
	
	
</mapper>