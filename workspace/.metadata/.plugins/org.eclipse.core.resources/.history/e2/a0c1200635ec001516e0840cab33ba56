<script type="text/javascript">
	$(function() {
		$('#fisheye').Fisheye({
			maxWidth : 80, //확대되는 아이콘의 넓이
			items : 'a', //아이콘을 설정하고 있는 태그
			itemsText : 'span',//아이콘이 확대될 때 표시되는 텍스트태그
			container : '.fisheyeContainter',//아이콘을 포함하고 있는 태그
			itemWidth : 80, //최초 표시되는 아이콘의 넓이
			proximity : 10, //마우스 반응영역
			halign : 'right'//피쉬아이의 표시 위치(left, right, center)
		});
	});
</script>
