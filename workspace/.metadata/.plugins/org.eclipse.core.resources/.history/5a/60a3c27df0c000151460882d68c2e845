package java_0122;

class _005CarTest3 {

	public static void main(String[] args) {
		Car3 c1 = new Car3();
		Car3 c2 = new Car3(c1);
		
		System.out.println("c1ÀÇ color = "+ c1.color + ", gearType = " 
		+c1.gearType + ", door = " +c1.door);
		System.out.println("c2ÀÇ color = "+ c2.color + ", gearType = "
		+c2.gearType + ", door = " +c2.door);
		
	}

}

class Car3{
	
	String color;
	String gearType;
	int door;

	Car3(){
		this("white", "auto", 4);
	}
	
	Car3(Car3 c){
		color = c.color;
		gearType = c.gearType;
		door = c.door;
	}
	Car3(String color, String gearType, int door){
		this.color = color;
		this.gearType = gearType;
		this.door = door;
	}
	
	
}